= form_for @store do |f|
  - if @store.errors.any?
    #error_explanation
      %h2= "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      %ul
        - @store.errors.full_messages.each do |message|
          %li= message

  .field.text-white
    = f.label :name
    = f.text_field :name
  .field.text-white
    = f.label :street
    = f.text_field :street
  .field.text-white
    = f.label :city
    = f.text_field :city
  .field.text-white
    = f.label :state
    = f.text_field :state
  .field.text-white
    = f.label :country
    = f.text_field :country
  .field.text-white
    = f.file_field :photo
  .actions.text-white
    = f.submit 'Save', class: "btn btn-dark"
