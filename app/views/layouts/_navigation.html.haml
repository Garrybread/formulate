%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-5
  .container-fluid
    %a.navbar-brand{:href => root_path} Formulate
    %button.navbar-toggler{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarNav", "data-bs-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      %ul.navbar-nav
        %li.nav-item.fw-light
          = link_to 'Home', root_path, class: "btn btn-dark"
        %li.nav-item.fw-light
          = link_to 'Explore', forms_path, class: "btn btn-dark"
        %li.nav-item.fw-light
          = link_to 'My Forms', my_forms_index_path, class: "btn btn-dark"
      %ul.navbar-nav.ms-auto
        - if user_signed_in?
          %li.nav-item.text-white.my-auto
            = link_to "Logged in:  #{current_user.username}", edit_user_registration_path, class: "btn btn-dark"
          = link_to 'Log Out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' }, class: "btn btn-dark"
        - else
          %li.nav-item
          = link_to 'Log In', new_user_session_path, class: "btn btn-dark"
