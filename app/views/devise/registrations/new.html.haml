- content_for :jumbotron do
  Create an Account
.row.justify-content-center
  .col-md-2.mx-auto
    .d-flex.text-white.text-center.justify-content-center
      = form_for(resource, as: resource_name, url: registration_path(resource_name), class: "btn, btn-dark") do |f|
        = render "devise/shared/error_messages", resource: resource
        .field.my-2
          = f.label :username
          %br/
          = f.text_field :username, autofocus: true, autocomplete: "username"
        .field.my-2
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field.my-2
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field.my-2
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions.my-3
          = f.submit "Create Account", class: "btn btn-dark w-100 rounded-pill"
        = render "devise/shared/links"